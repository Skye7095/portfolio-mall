<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.portfolio.mall.cart.dao.CartDAO">
	<!-- 장바구니 개별 cart 추가 -->
	<insert id="insertCart" parameterType="map">
		INSERT INTO
			`cart`
		(
			`buyerId`
			, `sellerId`
			, `productId`
			, `productPrice`
			, `productAmount`
			, `productDeliveryPrice`
			, `productSumPrice`
			, `productTotalPrice`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{buyerId}
			, #{sellerId}
			, #{productId}
			, #{productPrice}
			, #{productAmount}
			, #{productDeliveryPrice}
			, #{productSumPrice}
			, #{productTotalPrice}
			, now()
			, now()
		)
	</insert>
	
	<!-- 같은 buyer가 같은 product를 추가했는지 조회 -->
	<select id="selectSameCart" parameterType="map" resultType="int">
		SELECT 
			count(1)
		FROM
			`cart`
		WHERE
			`buyerId` = #{buyerId} AND `productId`= #{productId}
	</select>
	
	<!-- cart에 있는 상품 수량 수정 -->
	<update id="updateCart" parameterType="map">
		UPDATE
			`cart`
		SET
			`productAmount` = #{productAmount}
			, `productSumPrice` = #{productSumPrice}
			, `productTotalPrice` = #{productTotalPrice}			
			, `updatedAt` = now()
		WHERE
			`buyerId` = #{buyerId} AND `productId`=#{productId}
	</update>
	
	<!-- 장바구니 페이지 상품 조회 -->
	<select id="selectCartList" parameterType="int" resultType="com.portfolio.mall.cart.model.Cart">
		SELECT
			`id`
			, `buyerId`
			, `sellerId`
			, `productId`
			, `productPrice`
			, `productAmount`
			, `productDeliveryPrice`
			, `productSumPrice`
			, `productTotalPrice`
			, `createdAt`
			, `updatedAt`
		FROM
			`cart`
		WHERE `buyerId` = #{buyerId}
		ORDER BY `id` DESC
	</select>

	<!-- 장바구니페이지 개별 상품 삭제하기 -->
	<delete id="deleteCart" parameterType="int">
		DELETE FROM
			`cart`
		WHERE
			`id` = #{cartId}
	</delete>
	
	<!-- 장바구니 결제완료 후 cart테이블 같은 buyerId 삭제 -->
	<delete id="deleteCartList" parameterType="int">
		DELETE FROM
			`cart`
		WHERE
			`buyerId` = #{buyerId}
	</delete>
	
	<!-- 장바구니 페이지 상품 조회 -->
	<select id="selectCart" parameterType="int" resultType="com.portfolio.mall.cart.model.Cart">
		SELECT
			`id`
			, `buyerId`
			, `sellerId`
			, `productId`
			, `productPrice`
			, `productAmount`
			, `productDeliveryPrice`
			, `productSumPrice`
			, `productTotalPrice`
			, `createdAt`
			, `updatedAt`
		FROM
			`cart`
		WHERE `id` = #{cartId}
	</select>
	
	<!-- 결제완료시 장바구니를 orderItems로 insert -->
	<insert id="insertOrderItems" parameterType="map">
		INSERT INTO
			`orderItems`
		(
			`buyerId`
			, `orderId`
			, `sellerId`
			, `productId`
			, `productPrice`
			, `productAmount`
			, `productDeliveryPrice`
			, `productSumPrice`
			, `productTotalPrice`
			, `status`
			, `createdAt`
			, `updatedAt`
		)
		SELECT
			`buyerId`
			, #{orderId}
			, `sellerId`
			, `productId`
			, `productPrice`
			, `productAmount`
			, `productDeliveryPrice`
			, `productSumPrice`
			, `productTotalPrice`
			, #{status}
			, now()
			, now()
		FROM `cart`
	</insert>
</mapper>